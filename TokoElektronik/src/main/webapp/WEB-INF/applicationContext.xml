<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd
		http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd">

	<context:component-scan base-package="com.xsis.training125"></context:component-scan>
	<context:property-placeholder location="classpath:application.properties"/>
	
	<!-- sebagi penggati connection database -->
	<!-- <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
	    <property name="driverClassName" value="${spring.datasource.driverClassName}" />
	    <property name="url" value="${spring.datasource.url}" />
	    <property name="username" value="${spring.datasource.username}"/>
	    <property name="password" value="${spring.datasource.password}"/>
	</bean> -->
	
	<!--  untuk ORACLE -->
	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
	    <property name="driverClassName" value="oracle.jdbc.driver.OracleDriver" />
	    <property name="url" value="jdbc:oracle:thin:@localhost:1521:xe" />
	    <property name="username" value="javacode"/>
	    <property name="password" value="1234"/>
	</bean>
	
	
	<!-- untuk load session hibernate -->
	<bean  class="org.springframework.orm.hibernate5.LocalSessionFactoryBean" 
	id="sessionFactory">
	 <property name="dataSource" ref="dataSource"></property>
	 <property name="annotatedClasses">
			<list>
				<value>com.xsis.training125.model.Employee</value>
				<value>com.xsis.training125.model.Department</value>
				<value>com.xsis.training125.model.Diskon</value>
				<value>com.xsis.training125.model.Pelanggan</value>
				<value>com.xsis.training125.model.Distributor</value>
				<value>com.xsis.training125.model.DetailPenjualan</value>
				<value>com.xsis.training125.model.Barang</value>
				<value>com.xsis.training125.model.Karyawan</value>
				<value>com.xsis.training125.model.Pembelian</value>
				<value>com.xsis.training125.model.Penjualan</value>
				 <!-- 
				  -->
			</list>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.hbm2ddl.auto">update</prop>
				<prop key="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hibernate.current_session_context_class">org.springframework.orm.hibernate5.SpringSessionContext
				</prop>
			</props>            
		</property>
	</bean>
	
	<bean id="transactionManager"
		class="org.springframework.orm.hibernate5.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	
</beans>
